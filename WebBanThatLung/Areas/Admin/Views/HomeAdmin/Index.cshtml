@model IEnumerable<SanPhamModel>

@{
    ViewData["Title"] = "Quản lý sản  phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="page-header"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <h4 class="card-title">Sản phẩm </h4>
                            <a class="btn btn-primary btn-round ms-auto" asp-controller="HomeAdmin" asp-action="Create">
                                <i class="fa fa-plus"></i> Thêm sản phẩm
                            </a>
                        </div>
                    </div>
                    <div class="card-body">


                        <!-- Table -->
                        <div class="table-responsive">
                            <table id="add-row" class="display table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Hình ảnh</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Số lượng</th>
                                        <th>Giá</th>

                                        <th>Ngày tạo</th>
                                        <th>Chất liệu</th>
                                        <th style="width: 10%">Thao tác</th>
                                    </tr>
                                </thead>




                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        var hinhAnhDauTien = item.HINH_ANH?.FirstOrDefault()?.TEN_HINH_ANH;
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(hinhAnhDauTien))
                                                {
                                                    <img src="~/media/SanPham/@hinhAnhDauTien" height="70px" width="70px" style="border-radius: 5px" alt="">
                                                }
                                                else
                                                {
                                                    <img src="~/media/SanPham/default.jpg" height="70px" width="70px" style="border-radius: 5px" alt="No image available">
                                                }
                                            </td>
                                            <td>@item.TEN_SAN_PHAM</td>
                                            <td>@item.SO_LUONG</td>
                                            <td>@item.GIA</td>
                                            <td>@item.NGAY_TAO.ToString("dd/MM/yyyy")</td>
                                            <td>@item.CHAT_LIEU</td>
                                            <td>
                                                <div class="form-button-action">
                                                    <a type="button" class="btn btn-link btn-primary btn-lg" asp-controller="HomeAdmin" asp-action="Edit" asp-route-id="@item.ID_SAN_PHAM">
                                                        <i class="fa fa-edit"></i> Sửa
                                                    </a>
                                                    <button type="button" class="btn btn-link btn-danger" data-bs-toggle="modal" data-bs-target="#deleteRowModal" onclick="setDeleteId(@item.ID_SAN_PHAM)">
                                                        <i class="fa fa-times"></i> Xóa
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Delete Modal -->
                        <div class="modal fade" id="deleteRowModal" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header border-0">
                                        <h5 class="modal-title">
                                            <span class="fw-mediumbold"> Xóa</span>
                                            <span class="fw-light"> loại sản phẩm</span>
                                        </h5>
                                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form asp-action="Delete" method="post">
                                            <input type="hidden" id="deleteId" name="id" />
                                            <p>Bạn có chắc chắn muốn xóa  sản phẩm này?</p>
                                            <div class="modal-footer border-0">
                                                <button type="submit" class="btn btn-primary">Xóa</button>
                                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Đóng</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                        <script>
                            function setDeleteId(id) {
                                $('#deleteId').val(id);
                            }

                            function editLoaiSanPham(id) {
                                $.ajax({
                                    url: '@Url.Action("GetLoaiSanPham", "LoaiAdmin")/' + id,
                                    type: 'GET',
                                    success: function (data) {
                                        $('#editId').val(data.id);
                                        $('#editTEN_LOAI_SAN_PHAM').val(data.tenLoaiSanPham);
                                        $('#editRowModal').modal('show');
                                    },
                                    error: function () {
                                        alert('Không thể lấy dữ liệu loại sản phẩm.');
                                    }
                                });
                            }
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}


