@model WebBanThatLung.Models.NguoiDungModel

@{
    ViewData["Title"] = "Xóa nhân viên";
}

<h1>@ViewData["Title"]</h1>

<h3>Bạn có chắc chắn muốn xóa khách hàng này?</h3>
<div>
    <h4>NguoiDungModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Hình ảnh</dt>
        <dd class="col-sm-10">@Model.HINH_ANH</dd>
        <dt class="col-sm-2">Họ tên</dt>
        <dd class="col-sm-10">@Model.HO_TEN</dd>
        <dt class="col-sm-2">Số điện thoại</dt>
        <dd class="col-sm-10">@Model.SDT</dd>
        <dt class="col-sm-2">CCCD</dt>
        <dd class="col-sm-10">@Model.CCCD</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.EMAIL</dd>
        <dt class="col-sm-2">Tài khoản</dt>
        <dd class="col-sm-10">@Model.TAI_KHOAN</dd>
        <dt class="col-sm-2">Vai trò</dt>
        <dd class="col-sm-10">@Model.VAI_TRO</dd>
        <dt class="col-sm-2">Ngày tạo</dt>
        <dd class="col-sm-10">@Model.NGAY_TAO</dd>
        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@Model.TRANG_THAI</dd>
        <dt class="col-sm-2">Ngày sinh</dt>
        <dd class="col-sm-10">@Model.NGAY_SINH</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID_NGUOI_DUNG" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Hủy bỏ</a>
    </form>
</div>
