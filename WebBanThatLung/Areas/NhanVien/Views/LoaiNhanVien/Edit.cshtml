@model WebBanThatLung.Models.LoaiSanPhamModel

@{
    ViewData["Title"] = "Chỉnh sửa loại sản phẩm";
    Layout = "~/Areas/NhanVien/Views/Shared/_LayoutNhanVien.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">Loại sản phẩm</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ID_LOAI_SAN_PHAM" />
                        <div class="form-group mb-3">
                            <label asp-for="TEN_LOAI_SAN_PHAM" class="control-label">Tên Loại sản phẩm</label>
                            <input asp-for="TEN_LOAI_SAN_PHAM" class="form-control" />
                            <span asp-validation-for="TEN_LOAI_SAN_PHAM" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Lưu" class="btn btn-primary" style="background-color:#212529;" />
                            <a asp-action="TrangLoai" class="btn btn-secondary ms-2">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
